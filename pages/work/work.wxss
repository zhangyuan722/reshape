.container {
    display: flex;
    flex-direction: column;
}

.img-container {
    width: 100%;
    height: 600rpx;
    position: relative;
    overflow: hidden;
}

.img-bg, .img-container::after {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
}

.img-container::after {
    content: '';
    background-color: rgba(0, 0, 0, .1);
}

.img-bg {
    filter: blur(40rpx);
    z-index: -1;
    background-size: cover;
    background-position: center;
    transition: background .3s ease-in-out;
}

.image-wrap {
    width: 100%;
    position: absolute;
    display: flex;
    justify-content: center;
    align-items: center;
}

.top-img {
    width: 100%;
    height: 600rpx;
    display: flex;
    border-radius: 10rpx;
}

.work-info {
    width: 100%;
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    padding: 34rpx 30rpx 26rpx 30rpx;
    background-color: #fff;
}

.info-container {
    width: 96%;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    flex: 1;
    position: relative;
    margin-top: -100rpx;
    margin-bottom: 80rpx;
    left: 50%;
    margin-left: -48%;
    padding: 30rpx 30rpx 0 30rpx;
    background: #fff;
    border-radius: 20rpx;
    box-shadow: 0 10px 10px rgba(0, 0, 0, 0.1);
}

.info-top {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.tags {
    display: flex;
    margin-top: 20rpx;
}

.l-tag {
    margin-right: 6rpx !important;
}

.tag {
    color: #3a62bb !important;
}

.left {
    width: 70%;
    display: flex;
    flex-direction: column;
}

.right {
    width: 78rpx;
    height: 120rpx;
    display: flex;
    justify-content: flex-end;
    margin-left: 20rpx;
    border-left: 2px dashed #F5F5F5;
}

.title {
    font-size: 36rpx;
    font-weight: 600;
    color: #333;
}

.subtitle {
    margin-top: 24rpx !important;
    margin-bottom: 20rpx !important;
    color: #333;
    font-size: 28rpx;
    font-weight: 400;
}

.info-bottom {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.origin {
    font-size: 24rpx;
    color: #999;
}

.like {
    box-sizing: border-box;
    display: flex;
    align-items: center;
    padding: 20rpx 0 20rpx 20rpx;
}

.like-icon {
    width: 50rpx;
    height: 50rpx;
}

.gif-size {
    width: 100rpx;
    height: 100rpx;
}

.like-num {
    font-size: 24rpx;
    color: #3a62bb;
}

.inner {
    width: 50rpx;
    height: 120rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #dce3fa;
}

.inner text {
    font-size: 20rpx;
    color: #3a62bb;
}

.sticky-container {
    z-index: 777 !important;
}

.step-title {
    width: 100%;
    height: 160rpx;
    position: absolute;
    z-index: -1;
}

.step-state-img {
    width: 100%;
    height: 160rpx;
}

.body-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
    top: 200rpx;
    /*与 whitespace -> margin-top 同步*/
    z-index: 0;
    background-color: #f5f5f5;
}

.step-card {
    margin-bottom: 30rpx;
}

.loc-left {
    left: 16rpx;
}

.loc-right {
    right: 16rpx;
}

.whitespace {
    margin-top: 200rpx;
    /*与 body-container -> top 同步*/
}

.loadmore-text {
    margin: 0 20rpx !important;
}

.toast{
    color: #fff !important;
}