page {
    background-color: #fff;
}

.container {
    width: 100%;
    display: flex;
    flex-direction: column;
}

.search-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.search-btn {
    width: 710rpx !important;
    height: 60rpx !important;
    font-size: 24rpx !important;
    font-weight: 400 !important;
    border-radius: 4rpx !important;
    background-color: #f1f1f1 !important;
    color: #c4c9d2 !important;
}

.segment-item-active {
    font-size: 26rpx !important;
    color: #3a62bb !important;
}

.segment-item {
    font-size: 26rpx !important;
    color: #666 !important;
    background-color: #fff !important;
}

.l-seg-line {
    width: 8rpx !important;
    height: 40rpx !important;
    background-color: #3a62bb !important;
}

.main {
    display: flex;
    justify-content: space-between;
    margin-top: 20rpx;
    border-top: 2rpx solid #f3f3f3;
}

.right {
    width: 588rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-left: 2rpx solid #f3f3f3;
}

::_webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}